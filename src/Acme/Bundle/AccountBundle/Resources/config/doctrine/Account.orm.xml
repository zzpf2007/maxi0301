<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity 
    repository-class="Acme\Bundle\AccountBundle\Repository\AccountRepository" 
    name="Acme\Bundle\AccountBundle\Entity\Account"
    table="maxi_account">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="username" type="string" column="username" length="60"/>
    <field name="province" type="string" column="province" length="60"/>
    <field name="city" type="string" column="city" length="60"/>
    <field name="district" type="string" column="district" length="60"/>
    <field name="street" type="string" column="street" length="255"/>
    <field name="postcode" type="string" column="postcode" length="60"/>
    <field name="phone" type="string" column="phone" length="60"/>
    <field name="fax" type="string" column="fax" length="20" nullable="true"/>
    <field name="mobile" type="string" column="mobile" length="50" nullable="true"/>
  </entity>
</doctrine-mapping>
