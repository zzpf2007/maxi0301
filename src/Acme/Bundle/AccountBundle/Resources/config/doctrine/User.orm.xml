<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity 
    repository-class="Acme\Bundle\AccountBundle\Repository\UserRepository" 
    name="Acme\Bundle\AccountBundle\Entity\User"
    table="maxi_user"
    >
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="username" type="string" column="username" length="60"/>
    <field name="firstName" type="string" column="first_name" length="60"/>
    <field name="lastName" type="string" column="last_name" length="60"/>
    <field name="password" type="string" column="password" length="255"/>
    <field name="discountLevel" type="string" column="discount_level" length="255"/>
  </entity>
</doctrine-mapping>
