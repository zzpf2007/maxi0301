<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Acme\Bundle\CartBundle\Repository\AddressRepository" name="Acme\Bundle\CartBundle\Entity\Address">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="province" type="string" column="province" length="60"/>
    <field name="city" type="string" column="city" length="60"/>
    <field name="district" type="string" column="district" length="60"/>
    <field name="street" type="string" column="street" length="255"/>
    <field name="postcode" type="string" column="postcode" length="50"/>
    <field name="phone1" type="string" column="phone1" length="50"/>
    <field name="phone2" type="string" column="phone2" length="50" nullable="true"/>
    <field name="phone3" type="string" column="phone3" length="50" nullable="true"/>
  </entity>
</doctrine-mapping>
